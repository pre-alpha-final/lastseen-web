@using Core
@using Data.Identity.Models
@using Microsoft.AspNetCore.Identity
@inject ApplicationSettings ApplicationSettings
@inject SignInManager<ApplicationUser> SignInManager

<nav class="navbar navbar-default navbar-fixed-top">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="#">@ApplicationSettings.ApplicationName</a>
		</div>
		<div class="collapse navbar-collapse" id="myNavbar">
			<ul class="nav navbar-nav navbar-right">
				@if (SignInManager.IsSignedIn(User))
				{
					foreach (var link in ApplicationSettings.NavBarLoggedIn)
					{
						<li><a href="@link.Item1" onclick="@link.Item2">@link.Item3</a></li>
					}
				}
				else
				{
					foreach (var link in ApplicationSettings.NavBarLoggedOut)
					{
						<li><a href="@link.Item1" onclick="@link.Item2">@link.Item3</a></li>
					}
				}
			</ul>
		</div>
	</div>
</nav>
